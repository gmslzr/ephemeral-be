# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:password@localhost:5432/kafka_api
DATABASE_URL=postgresql://user:password@localhost:5432/kafka_api

# JWT Secret Key
# Minimum 32 characters required
# Generate a secure random string for production (e.g., using: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production

# Kafka Configuration
# Comma-separated list of Kafka bootstrap servers
# Default: localhost:9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Admin API Key
# Optional: API key for admin endpoints
# Leave empty if not using admin API key authentication
ADMIN_API_KEY=

# CORS Origins
# Comma-separated list of allowed CORS origins
# Example: http://localhost:3000,http://localhost:8000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting Configuration
# Number of requests allowed per rate limit period
RATE_LIMIT_REQUESTS=100

# Rate limit period (minute, hour, etc.)
RATE_LIMIT_PERIOD=minute
